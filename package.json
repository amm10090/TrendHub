{
  "name": "trend-hub",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:web": "turbo run dev --filter=front-end",
    "dev:admin": "turbo run dev --filter=@trend-hub/admin",
    "build:web": "turbo run build --filter=front-end",
    "build:admin": "turbo run build --filter=@trend-hub/admin",
    "start:web": "turbo run start --filter=front-end",
    "start:admin": "turbo run start --filter=@trend-hub/admin",
    "prepare": "husky"
  },
  "devDependencies": {
    "@emotion/is-prop-valid": "1.3.1",
    "@eslint/js": "9.28.0",
    "@tailwindcss/postcss": "4.1.8",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.5",
    "@typescript-eslint/eslint-plugin": "8.33.0",
    "@typescript-eslint/parser": "8.33.0",
    "critters": "0.0.25",
    "eslint": "^9.26.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "turbo": "^2.5.3",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.11.1+sha512.e519b9f7639869dc8d5c3c5dfef73b3f091094b0a006d7317353c72b124e80e1afd429732e28705ad6bfa1ee879c1fce46c128ccebd3192101f43dd67c667912",
  "pnpm": {
    "inject-workspace-packages": true
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
