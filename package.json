{
  "name": "trend-hub",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:web": "turbo run dev --filter=front-end",
    "dev:admin": "turbo run dev --filter=@trend-hub/admin",
    "build:web": "turbo run build --filter=front-end",
    "build:admin": "turbo run build --filter=@trend-hub/admin",
    "start:web": "turbo run start --filter=front-end",
    "start:admin": "turbo run start --filter=@trend-hub/admin",
    "prepare": "husky"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.0.13",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@typescript-eslint/eslint-plugin": "8.26.1",
    "@typescript-eslint/parser": "8.26.1",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2"
  },
  "packageManager": "pnpm@10.6.2+sha512.47870716bea1572b53df34ad8647b42962bc790ce2bf4562ba0f643237d7302a3d6a8ecef9e4bdfc01d23af1969aa90485d4cebb0b9638fa5ef1daef656f6c1b",
  "dependencies": {
    "@emotion/is-prop-valid": "1.3.1",
    "@eslint/js": "9.22.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
