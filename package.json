{
  "name": "trend-hub",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:web": "turbo run dev --filter=front-end",
    "dev:admin": "turbo run dev --filter=@trend-hub/admin",
    "build:web": "turbo run build --filter=front-end",
    "build:admin": "turbo run build --filter=@trend-hub/admin",
    "start:web": "turbo run start --filter=front-end",
    "start:admin": "turbo run start --filter=@trend-hub/admin",
    "prepare": "husky"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "4.0.14",
    "@types/react": "19.0.10",
    "@types/react-dom": "19.0.4",
    "@typescript-eslint/eslint-plugin": "8.26.1",
    "@typescript-eslint/parser": "8.26.1",
    "eslint": "^9.22.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2"
  },
  "packageManager": "pnpm@10.6.3+sha512.bb45e34d50a9a76e858a95837301bfb6bd6d35aea2c5d52094fa497a467c43f5c440103ce2511e9e0a2f89c3d6071baac3358fc68ac6fb75e2ceb3d2736065e6",
  "dependencies": {
    "@emotion/is-prop-valid": "1.3.1",
    "@eslint/js": "9.22.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
