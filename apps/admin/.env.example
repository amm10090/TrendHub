# 数据库配置
DATABASE_URL="postgresql://user:password@localhost:5432/trendhub"

# Auth.js 配置
AUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3001"

# FMTC 折扣调度器配置
# 是否启用自动调度器
DISCOUNT_SCHEDULER_ENABLED=false

# 调度器检查间隔（分钟）
DISCOUNT_SCHEDULER_INTERVAL_MINUTES=60

# 最大并发运行数
DISCOUNT_SCHEDULER_MAX_CONCURRENT=1

# 重试次数
DISCOUNT_SCHEDULER_RETRY_ATTEMPTS=3

# 重试延迟（分钟）
DISCOUNT_SCHEDULER_RETRY_DELAY=5

# 过期处理配置
# 是否自动禁用过期折扣
DISCOUNT_AUTO_DISABLE_EXPIRED=true

# 过期多少天后自动删除
DISCOUNT_AUTO_DELETE_AFTER_DAYS=30

# 检查间隔（小时）
DISCOUNT_CHECK_INTERVAL_HOURS=1

# 是否启用过期前通知
DISCOUNT_NOTIFY_BEFORE_EXPIRY=false

# 提前几天通知
DISCOUNT_NOTIFY_DAYS_BEFORE=3

# 通知邮箱
DISCOUNT_NOTIFY_EMAIL=admin@example.com

# 是否启用自动清理
DISCOUNT_ENABLE_AUTO_CLEANUP=false

# 清理多少天前的过期数据
DISCOUNT_CLEANUP_OLDER_THAN_DAYS=90

# 单次清理最大数量
DISCOUNT_MAX_CLEANUP_BATCH=1000

# 数据阈值通知
# 有效折扣数量阈值
DISCOUNT_DATA_THRESHOLD=1000

# AWS S3 / Cloudflare R2 文件存储（如需要）
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# 邮件服务配置（如需要通知功能）
RESEND_API_KEY=your-resend-api-key
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASS=your-smtp-password

# 应用配置
NODE_ENV=development
PORT=3001