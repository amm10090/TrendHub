{
  "apps": [
    {
      "name": "trend-hub-admin",
      "cwd": "./apps/admin",
      "script": "node_modules/.bin/next",
      "args": "start -p 3001",
      "instances": "1",
      "exec_mode": "cluster",
      "watch": false,
      "autorestart": true,
      "max_memory_restart": "512M",
      "env_production": {
        "NODE_ENV": "production"
      }
    },
    {
      "name": "trend-hub-web",
      "cwd": "./apps/web",
      "script": "node_modules/.bin/next",
      "args": "start -p 3000",
      "instances": "1",
      "exec_mode": "cluster",
      "watch": false,
      "autorestart": true,
      "max_memory_restart": "512M",
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ]
}
