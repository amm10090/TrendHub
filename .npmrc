public-hoist-pattern[]=*@heroui/*
public-hoist-pattern[]=*framer-motion* 
node-linker=hoisted
strict-peer-dependencies=false
auto-install-peers=true
enable-pre-post-scripts=true
legacy-peer-deps=true

# 允许这些包运行构建脚本
unsafe-perm=true
