{
  "apps": [
    {
      "name": "trend-hub-admin",
      "cwd": ".",
      "script": "./scripts/admin-xvfb-start.sh",
      "args": "",
      "instances": "1",
      "exec_mode": "fork",
      "watch": false,
      "autorestart": true,
      "max_memory_restart": "512M",
      "min_uptime": "10s",
      "max_restarts": 5,
      "restart_delay": 5000,
      "env_production": {
        "NODE_ENV": "production",
        "NODE_OPTIONS": "--no-deprecation",
        "AUTH_TRUST_HOST": "true",
        "DISPLAY": ":99"
      },
      "error_file": "./logs/admin-error.log",
      "out_file": "./logs/admin-out.log",
      "log_file": "./logs/admin-combined.log"
    },
    {
      "name": "trend-hub-web",
      "cwd": "./apps/web",
      "script": "npm",
      "args": "run start:production",
      "instances": "1",
      "exec_mode": "fork",
      "watch": false,
      "autorestart": true,
      "max_memory_restart": "512M",
      "min_uptime": "10s",
      "max_restarts": 5,
      "restart_delay": 5000,
      "env_production": {
        "NODE_ENV": "production",
        "NODE_OPTIONS": "--no-deprecation",
        "AUTH_TRUST_HOST": "true",
        "DISPLAY": ":99"
      },
      "error_file": "./logs/web-error.log",
      "out_file": "./logs/web-out.log",
      "log_file": "./logs/web-combined.log"
    }
  ]
}
