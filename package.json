{
  "name": "trend-hub",
  "private": true,
  "version": "1.2.0",
  "type": "module",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev:web": "turbo run dev --filter=front-end",
    "dev:admin": "turbo run dev --filter=@trend-hub/admin",
    "build:web": "turbo run build --filter=front-end",
    "build:admin": "turbo run build --filter=@trend-hub/admin",
    "start:web": "turbo run start --filter=front-end",
    "start:admin": "turbo run start --filter=@trend-hub/admin",
    "prepare": "husky"
  },
  "devDependencies": {
    "@emotion/is-prop-valid": "1.3.1",
    "@eslint/js": "9.25.0",
    "@tailwindcss/postcss": "4.1.4",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/parser": "8.30.1",
    "critters": "0.0.25",
    "eslint": "^9.25.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "turbo": "^2.5.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.10.0",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
