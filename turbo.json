{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["pnpm-lock.yaml", "tsconfig.json", "**/.env.*local"],
  "globalEnv": ["TURBO_REMOTE_CACHE_SIGNATURE_KEY", "NODE_ENV", "CI"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**", "build/**"],
      "inputs": [
        "$TURBO_DEFAULT$",
        "!**/*.test.*",
        "!**/*.spec.*",
        "!README.md",
        "!CHANGELOG.md",
        "!**/*.md"
      ],
      "env": [
        "SMTP_HOST",
        "SMTP_PORT",
        "SMTP_USER",
        "SMTP_PASS",
        "SMTP_FROM",
        "NODE_ENV",
        "NEXT_PUBLIC_*",
        "TURBO_REMOTE_CACHE_SIGNATURE_KEY",
        "DATABASE_URL",
        "AUTH_SECRET",
        "NEXTAUTH_SECRET"
      ],
      "outputLogs": "new-only"
    },
    "lint": {
      "outputs": [],
      "inputs": [
        "src/**",
        "app/**",
        "pages/**",
        "components/**",
        "lib/**",
        "*.{js,cjs,mjs,ts,tsx,jsx}",
        "package.json",
        "tsconfig.json",
        "eslint.config.js",
        ".eslintrc.*",
        "!dist/**",
        "!.next/**",
        "!**/*.md"
      ],
      "outputLogs": "errors-only"
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": [
        "src/**",
        "app/**",
        "pages/**",
        "components/**",
        "lib/**",
        "*.{ts,tsx}",
        "package.json",
        "tsconfig.json",
        "!dist/**",
        "!.next/**"
      ],
      "outputLogs": "errors-only"
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["build"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**", "test-results/**"],
      "inputs": [
        "src/**",
        "app/**",
        "test/**",
        "__tests__/**",
        "*.test.*",
        "*.spec.*",
        "package.json",
        "tsconfig.json",
        "jest.config.*",
        "vitest.config.*",
        "!dist/**",
        "!.next/**"
      ],
      "outputLogs": "errors-only"
    },
    "clean": {
      "cache": false
    },
    "@repo/types#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "../../pnpm-lock.yaml"
      ],
      "outputLogs": "new-only"
    },
    "@repo/scraper#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".crawlee/**"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "../../pnpm-lock.yaml"
      ],
      "outputLogs": "new-only"
    },
    "@repo/ui#build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": [
        "src/**",
        "package.json",
        "tsconfig.json",
        "../../pnpm-lock.yaml"
      ],
      "outputLogs": "new-only"
    }
  },
  "remoteCache": {
    "signature": true,
    "enabled": true
  }
}
